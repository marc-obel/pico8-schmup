version 42
__lua__
function _init() 
	player = {
		x=50,
		y=100,
		direction=0
	}
	
	
	linesx = {10,20,30,40,60,70,90,100,120}
	linesy = {-30,-174,-12,-122,-55,-72,-120,-23,-43,-99}
	trail = {}
end

function _update60()
	if (btn(0)) move_left()
	if (btn(1)) move_right()
	if (btn(2)) player.y -=1
	if (btn(3)) player.y +=1
	if (not btn(0) and not btn(1)) player.direction = 0 
end

function _draw()
	cls(8)
	speed_line()
	draw_player(player.direction)
end

function move_left()
	player.x -=1
	player.direction = 1
end

function move_right()
	player.x +=1
	player.direction = 2
end

function draw_player(direction)
	if (direction == 0) sspr(0,0,20,18,player.x,player.y)
	if (direction == 1) sspr(0,20,20,18,player.x,player.y)
	if (direction == 2) sspr(21,20,20,18,player.x,player.y)
end

function speed_line()
	for i=1,count(linesy),1 do
		if (linesy[i] > 150) linesy[i] = rnd(200) -250
		linesy[i] += 4
		sspr(127,0,1,24,linesx[i], linesy[i])
	end
end

function draw_flames()
	sspr()
end

function pq(text)
	printh(text, "log")
end
